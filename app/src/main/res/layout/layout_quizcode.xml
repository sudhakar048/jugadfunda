<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dp2"
    android:visibility="gone"
    android:id="@+id/cv_quizcode">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp20"
        android:layout_marginBottom="@dimen/dp20">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/enter_code"
        android:gravity="center"
        android:textSize="@dimen/sp16"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/dp20"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:id="@+id/et_quizcode"
        android:hint="@string/enter_code_hint"
        android:layout_marginTop="@dimen/dp20"
        android:background="@drawable/sp_grayborder"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp40"
            android:id="@+id/btn_codesubmit"
           android:layout_gravity="center"
            android:text="@string/submit"
            android:layout_marginTop="@dimen/dp20"
            android:background="@drawable/sp_grayborder"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enter_quizcode_instructions"
            android:gravity="center"
            android:textSize="@dimen/sp16"

            android:layout_marginTop="@dimen/dp20"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_errormsg"
            android:textSize="@dimen/sp16"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="Text"
            android:layout_marginTop="@dimen/dp50"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linear_slot"
            android:orientation="vertical"
            android:padding="@dimen/dp10"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_date"
                android:textSize="@dimen/sp14"
                android:layout_marginTop="@dimen/dp10"
                android:gravity="left"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_slot"
                android:textSize="@dimen/sp14"
                android:layout_marginTop="@dimen/dp10"
                android:gravity="left"/>

        </LinearLayout>
</LinearLayout>


</androidx.cardview.widget.CardView>