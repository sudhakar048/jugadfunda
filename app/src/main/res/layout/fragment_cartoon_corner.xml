<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/dp5"
    tools:context=".learningcompanion.home.funcorner.CartoonCornerFragment"
    android:weightSum="10"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:cardUseCompatPadding="true"
        android:layout_weight="7"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="7"
            android:id="@+id/linear_funcorner"
            android:visibility="gone"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/iv_cc"
                android:scaleType="centerCrop"
                android:layout_weight="4"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/tv_ctext"
                android:layout_marginTop="@dimen/dp160"
                android:layout_margin="@dimen/dp5"
                android:text="@string/dummy_text"
                android:layout_weight="2"
                />

            <LinearLayout
                android:background="@drawable/sp_grayborder"
                android:layout_marginTop="@dimen/dp5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="bottom"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:id="@+id/linear_happy"
                    >
                    <ImageView
                        android:padding="@dimen/dp5"
                        android:src="@drawable/ic_happy"
                        android:layout_width="wrap_content"
                        android:id="@+id/iv_happy"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tv_happycount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="10"
                        android:textSize="20dp"
                        android:layout_margin="5dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:id="@+id/linear_satisfied">
                    <ImageView
                        android:padding="@dimen/dp5"
                        android:src="@drawable/ic_shy"
                        android:layout_width="wrap_content"
                        android:id="@+id/iv_satisfied"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tv_satisfied"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="10"
                        android:textSize="20dp"
                        android:layout_margin="5dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:id="@+id/linear_unhappy">
                    <ImageView
                        android:padding="@dimen/dp5"
                        android:src="@drawable/ic_confused"
                        android:layout_width="wrap_content"
                        android:id="@+id/iv_unhappy"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tv_unhappy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="10"
                        android:textSize="20dp"
                        android:layout_margin="5dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:id="@+id/linear_sad">
                    <ImageView
                        android:padding="@dimen/dp5"
                        android:src="@drawable/ic_sad"
                        android:layout_width="wrap_content"
                        android:id="@+id/iv_sad"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tv_sad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="10"
                        android:textSize="20dp"
                        android:layout_margin="5dp"/>
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
        <include layout="@layout/layout_nodata"/>
    </androidx.cardview.widget.CardView>

   <androidx.cardview.widget.CardView
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/dp5"
        app:cardUseCompatPadding="true"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
       android:id="@+id/card2"
       android:layout_weight="3"
       android:visibility="gone">
       <include layout="@layout/layout_advertisement"/>
    </androidx.cardview.widget.CardView>
</LinearLayout>