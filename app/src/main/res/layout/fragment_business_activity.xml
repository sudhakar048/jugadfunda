<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".learningcompanion.businessactivity.BusinessActivityFragment">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/pager"
        android:layout_above="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <View
        android:id="@+id/line"
        android:layout_above="@+id/re_bottom"
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"/>

    <RelativeLayout
        android:id="@+id/re_bottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp45">

        <ImageView
            android:padding="@dimen/dp10"
            android:src="@drawable/ic_question"
            android:layout_width="@dimen/dp50"
            android:layout_height="match_parent"
            android:id="@+id/iv_info"/>

        <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
            android:id="@+id/dots_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:dotsColor="@color/gray"
            app:dotsCornerRadius="@dimen/dp5"
            app:dotsSize="@dimen/dp10"
            app:dotsSpacing="@dimen/dp2"
            app:dotsWidthFactor="2.5"
            app:progressMode="false"
            app:selectedDotColor="@color/colorAccent" />


        <ImageView
            android:padding="@dimen/dp5"
            android:src="@drawable/ic_youtube"
            android:layout_alignParentEnd="true"
            android:layout_width="@dimen/dp50"
            android:layout_height="match_parent"
            android:id="@+id/iv_utube"/>

    </RelativeLayout>

</RelativeLayout>