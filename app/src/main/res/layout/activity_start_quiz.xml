<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".quiz.questions.StartQuizActivity"
   >

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:id="@+id/app_layout"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_timer"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/sp16"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ellipsize="none"
                android:scrollHorizontally="true"
                android:text="Timer"/>

        </RelativeLayout>



    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="10">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/tv_title"
            android:textSize="@dimen/sp16"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="@dimen/dp5"
            android:layout_weight="1"
            android:visibility="gone"
          />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/pager"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@+id/recycler_dots"
        android:layout_weight="8"
        />

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/recycler_dots"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="1"
        android:layout_weight="1"
        >

        <TextView
            android:id="@+id/tv_skip"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:text="@string/skip"
            android:padding="@dimen/dp10"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            />

        <TextView
            android:id="@+id/tv_submittest"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:text="@string/submit_test"
            android:padding="@dimen/dp10"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_weight=".4"
            android:textSize="@dimen/sp16"
            android:background="@drawable/sp_grayborder"
            android:enabled="false"
            />

        <TextView
            android:id="@+id/tv_next"
            android:layout_alignParentEnd="true"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:text="@string/next"
            android:padding="@dimen/dp10"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_weight=".3"/>
    </LinearLayout>

        <include layout="@layout/layout_nodata"/>
        <include layout="@layout/layout_quizinstructions"/>
    </LinearLayout>


</LinearLayout>