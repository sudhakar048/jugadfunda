<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/linear_pdetails">

    <TextView
        android:text="@string/tell_us_your_name"
        android:layout_gravity="start"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp20"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="@dimen/dp5"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="#E3E3E3"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginStart="@dimen/dp20"
        android:layout_marginEnd="@dimen/dp20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50">
        <LinearLayout
            android:paddingStart="@dimen/dp10"
            android:paddingEnd="@dimen/dp10"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <EditText
                android:id="@+id/et_firstname"
                android:layout_weight="1"
                android:hint="@string/first_name"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:background="@color/transparentcolor"
                android:inputType="textCapSentences"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:maxLength="50"/>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="@dimen/dp5"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="#E3E3E3"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginStart="@dimen/dp20"
        android:layout_marginEnd="@dimen/dp20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50">
        <LinearLayout
            android:paddingStart="@dimen/dp10"
            android:paddingEnd="@dimen/dp10"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <EditText
                android:id="@+id/et_lastname"
                android:layout_weight="1"
                android:hint="@string/last_name"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:background="@color/transparentcolor"
                android:inputType="textCapSentences"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:maxLength="50"/>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:text="@string/tell_us_your_e_mail"
        android:layout_gravity="start"
        android:layout_marginTop="@dimen/dp20"
        android:layout_marginLeft="@dimen/dp20"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="@dimen/dp5"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="#E3E3E3"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginStart="@dimen/dp20"
        android:layout_marginEnd="@dimen/dp20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50">
        <LinearLayout
            android:paddingStart="@dimen/dp10"
            android:paddingEnd="@dimen/dp10"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <EditText
                android:id="@+id/et_email"
                android:hint="@string/mail_hint"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:background="@color/transparentcolor"
                android:inputType="textEmailAddress"
                android:paddingStart="@dimen/dp10"
                android:paddingEnd="@dimen/dp10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLength="50"/>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="@dimen/dp5"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="#E3E3E3"
        android:layout_marginTop="@dimen/dp30"
        android:layout_marginStart="@dimen/dp20"
        android:layout_marginEnd="@dimen/dp20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingStart="@dimen/dp10"
            android:paddingEnd="@dimen/dp10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableEnd="@drawable/ic_arrow_drop_down_black"
                android:drawableRight="@drawable/ic_arrow_drop_down_black"
                android:gravity="center"
                android:text="+91"
                android:textColor="@color/black"
                android:textSize="@dimen/sp16" />

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/transparentcolor"
                android:hint="@string/enter_phone_number"
                android:inputType="phone"
                android:textColor="@color/black"
                android:textColorHint="@color/black" />

            <ImageView
                android:id="@+id/iv_clear"
                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp30"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dp5"
                android:layout_marginLeft="@dimen/dp5"
                android:padding="@dimen/dp5"
                android:src="@drawable/ic_close" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:text="@string/tell_us_your_institute"
        android:layout_gravity="start"
        android:layout_marginTop="@dimen/dp20"
        android:layout_marginLeft="@dimen/dp20"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="@dimen/dp5"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="#E3E3E3"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginStart="@dimen/dp20"
        android:layout_marginEnd="@dimen/dp20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50">
        <LinearLayout
            android:paddingStart="@dimen/dp10"
            android:paddingEnd="@dimen/dp10"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <EditText
                android:id="@+id/et_institute"
                android:hint="@string/institute_name"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:background="@color/transparentcolor"
                android:inputType="textEmailAddress"
                android:paddingStart="@dimen/dp10"
                android:paddingEnd="@dimen/dp10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLength="500"/>


        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <TextView
        android:layout_marginTop="@dimen/dp10"
        android:textColor="?android:attr/textColorPrimary"
        android:text="@string/we_respect_privacy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginRight="@dimen/dp20"/>

    <TextView
        android:textColor="?android:attr/textColorPrimary"
        android:text="@string/don_t_worry_your_data_is_safe_with_us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginRight="@dimen/dp20"/>

        <Button
            android:layout_width="80dp"
            android:layout_height="@dimen/dp40"
            android:id="@+id/btn_next"
            android:text="@string/submit"
            android:layout_gravity="center"
            android:background="@drawable/gradient_button_round"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:layout_marginTop="@dimen/dp20"
            />


</LinearLayout>
