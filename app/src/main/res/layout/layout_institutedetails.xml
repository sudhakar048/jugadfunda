<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/institutedetails"
    android:visibility="visible">

    <Button
        android:layout_width="80dp"
        android:layout_height="@dimen/dp40"
        android:id="@+id/btn_previous"
        android:text="@string/previous"
        android:layout_gravity="center"
        android:background="@drawable/gradient_button_round"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:layout_marginTop="@dimen/dp20"
        />

    <TextView
        android:text="@string/select_state"
        android:layout_gravity="start"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp20"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="@dimen/dp5"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="#E3E3E3"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginStart="@dimen/dp20"
        android:layout_marginEnd="@dimen/dp20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50">
        <LinearLayout
            android:paddingStart="@dimen/dp10"
            android:paddingEnd="@dimen/dp10"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <Spinner
                android:id="@+id/spinner_state"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:maxLength="50"/>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:text="@string/select_district"
        android:layout_gravity="start"
        android:layout_marginTop="@dimen/dp20"
        android:layout_marginLeft="@dimen/dp20"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="@dimen/dp5"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="#E3E3E3"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginStart="@dimen/dp20"
        android:layout_marginEnd="@dimen/dp20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50">
        <LinearLayout
            android:paddingStart="@dimen/dp10"
            android:paddingEnd="@dimen/dp10"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <Spinner
                android:id="@+id/spinner_district"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:maxLength="50"/>


        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <TextView
        android:text="@string/select_center"
        android:layout_gravity="start"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp20"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="@dimen/dp5"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="#E3E3E3"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginStart="@dimen/dp20"
        android:layout_marginEnd="@dimen/dp20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50">
        <LinearLayout
            android:paddingStart="@dimen/dp10"
            android:paddingEnd="@dimen/dp10"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <Spinner
                android:id="@+id/spinner_center"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:maxLength="50"/>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:text="@string/select_institute"
        android:layout_gravity="start"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp20"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="@dimen/dp5"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="#E3E3E3"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginStart="@dimen/dp20"
        android:layout_marginEnd="@dimen/dp20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50">
        <LinearLayout
            android:paddingStart="@dimen/dp10"
            android:paddingEnd="@dimen/dp10"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <Spinner
                android:id="@+id/spinner_institute"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:maxLength="50"/>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_marginTop="@dimen/dp10"
        android:textColor="?android:attr/textColorPrimary"
        android:text="@string/we_respect_privacy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginRight="@dimen/dp20"/>

    <TextView
        android:textColor="?android:attr/textColorPrimary"
        android:text="@string/don_t_worry_your_data_is_safe_with_us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginRight="@dimen/dp20"/>

    <Button
        android:layout_width="80dp"
        android:layout_height="@dimen/dp40"
        android:id="@+id/btn_submit"
        android:text="@string/submit"
        android:layout_gravity="center"
        android:background="@drawable/gradient_button_round"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:layout_marginTop="@dimen/dp20"
        />
</LinearLayout>