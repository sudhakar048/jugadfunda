<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/dp2"
    app:cardCornerRadius="@dimen/dp5">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dp5">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title_course"
            android:text="@string/mentor_course"
            android:textSize="@dimen/sp14"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dp2"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_course"
            android:textSize="@dimen/sp14"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title_module"
            android:text="@string/mentor_course_module"
            android:textSize="@dimen/sp14"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dp2"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_coursemodule"
            android:textSize="@dimen/sp14"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title_submodule"
            android:text="@string/mentor_course_submodule"
            android:textSize="@dimen/sp14"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dp2"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_submodule"
            android:textSize="@dimen/sp14"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mentor_coursequery"
            android:textSize="@dimen/sp14"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dp2"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_coursequery"
            android:textSize="@dimen/sp14"
            />


        <RatingBar
            android:id="@+id/rating"
            style = "?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:clickable="false"
            android:numStars="5"
            android:stepSize="1"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp5"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mentor_queryinstruction"
            android:layout_marginTop="@dimen/dp3"
            android:textSize="@dimen/sp14"
            android:textStyle="bold"
            android:gravity="center"/>


    </LinearLayout>


</androidx.cardview.widget.CardView>