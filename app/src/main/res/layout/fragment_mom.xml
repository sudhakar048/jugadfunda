<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbars="none"
    tools:context=".learningcompanion.inquiryform.mom.MomFragment">

   <LinearLayout
       android:orientation="vertical"
       android:layout_margin="@dimen/dp10"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:layout_margin="@dimen/dp10"
           android:text="@string/summary_of_meeting"
           android:textColor="@color/colorPrimary"
           android:textSize="@dimen/sp18"
           android:textStyle="bold" />

       <EditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/et_mdate"
           android:layout_marginTop="@dimen/dp10"
           android:background="@drawable/sp_grayborder"
           android:hint="@string/enter_date"
           android:padding="@dimen/dp5"
           android:textSize="@dimen/sp14"
           android:focusable="false"
           android:enabled="true"/>

       <com.google.android.material.textfield.TextInputLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           app:counterEnabled="true"
           app:counterMaxLength="200"
           app:helperText="Title of Meeting"
           android:layout_marginTop="@dimen/dp5">
       <com.google.android.material.textfield.TextInputEditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/et_title"
           android:layout_marginTop="@dimen/dp20"
           android:background="@drawable/sp_grayborder"
           android:hint="@string/enter_title_of_meeting"
           android:padding="@dimen/dp5"
           android:textSize="@dimen/sp14" />
       </com.google.android.material.textfield.TextInputLayout>

       <com.google.android.material.textfield.TextInputLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           app:counterEnabled="true"
           app:counterMaxLength="200"
           app:helperText="Meeting Location"
           android:layout_marginTop="@dimen/dp5">
       <com.google.android.material.textfield.TextInputEditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/et_loc"
           android:layout_marginTop="@dimen/dp20"
           android:background="@drawable/sp_grayborder"
           android:hint="@string/enter_location"
           android:padding="@dimen/dp5"
           android:textSize="@dimen/sp14" />
       </com.google.android.material.textfield.TextInputLayout>


       <EditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/et_starttime"
           android:layout_marginTop="@dimen/dp20"
           android:background="@drawable/sp_grayborder"
           android:hint="@string/enter_start_time"
           android:inputType="textCapSentences"
           android:padding="@dimen/dp5"
           android:textSize="@dimen/sp14"
           android:focusable="false"
           android:enabled="true"/>


       <EditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/et_endtime"
           android:layout_marginTop="@dimen/dp20"
           android:background="@drawable/sp_grayborder"
           android:hint="@string/enter_end_time"
           android:inputType="textCapSentences"
           android:padding="@dimen/dp5"
           android:textSize="@dimen/sp14"
           android:focusable="false"
           android:enabled="true"/>

       <com.google.android.material.textfield.TextInputLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           app:counterEnabled="true"
           app:counterMaxLength="500"
           app:helperText="Attendees Name"
           android:layout_marginTop="@dimen/dp5">
       <com.google.android.material.textfield.TextInputEditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/et_attendeesname"
           android:layout_marginTop="@dimen/dp20"
           android:background="@drawable/sp_grayborder"
           android:hint="@string/name_of_attendees"
           android:padding="@dimen/dp5"
           android:textSize="@dimen/sp14" />
       </com.google.android.material.textfield.TextInputLayout>

       <com.google.android.material.textfield.TextInputLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           app:counterEnabled="true"
           app:counterMaxLength="1000"
           app:helperText="Meeting Points"
           android:layout_marginTop="@dimen/dp5">
       <com.google.android.material.textfield.TextInputEditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/et_pointdiscussed"
           android:layout_marginTop="@dimen/dp20"
           android:background="@drawable/sp_grayborder"
           android:hint="@string/enter_points_discussed"
           android:padding="@dimen/dp5"
           android:textSize="@dimen/sp14" />
       </com.google.android.material.textfield.TextInputLayout>

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/et_technologybusiness"
           android:layout_gravity="center"
           android:layout_margin="@dimen/dp10"
           android:text="@string/technology_business_interns_details"
           android:textColor="@color/colorPrimary"
           android:textSize="@dimen/sp18"
           android:textStyle="bold" />

       <com.google.android.material.textfield.TextInputLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           app:counterEnabled="true"
           app:counterMaxLength="150"
           app:helperText="Student Name"
           android:layout_marginTop="@dimen/dp5">
       <com.google.android.material.textfield.TextInputEditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/et_studname"
           android:layout_marginTop="@dimen/dp20"
           android:background="@drawable/sp_grayborder"
           android:hint="@string/enter_name"
           android:padding="@dimen/dp5"
           android:textSize="@dimen/sp14" />
       </com.google.android.material.textfield.TextInputLayout>

       <com.google.android.material.textfield.TextInputLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           app:counterEnabled="true"
           app:counterMaxLength="500"
           app:helperText="College Name"
           android:layout_marginTop="@dimen/dp5">
       <com.google.android.material.textfield.TextInputEditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/et_collegename"
           android:layout_marginTop="@dimen/dp20"
           android:background="@drawable/sp_grayborder"
           android:hint="@string/enter_college_name"
           android:padding="@dimen/dp5"
           android:textSize="@dimen/sp14" />
       </com.google.android.material.textfield.TextInputLayout>

       <com.google.android.material.textfield.TextInputLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           app:counterEnabled="true"
           app:counterMaxLength="500"
           app:helperText="Department Name"
           android:layout_marginTop="@dimen/dp5">
       <com.google.android.material.textfield.TextInputEditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/et_deptname"
           android:layout_marginTop="@dimen/dp20"
           android:background="@drawable/sp_grayborder"
           android:hint="@string/enter_dept_name"
           android:padding="@dimen/dp5"
           android:textSize="@dimen/sp14" />
       </com.google.android.material.textfield.TextInputLayout>

       <EditText
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/et_year"
           android:layout_marginTop="@dimen/dp20"
           android:background="@drawable/sp_grayborder"
           android:hint="@string/enter_year"
           android:inputType="phone"
           android:padding="@dimen/dp5"
           android:textSize="@dimen/sp14"
           android:maxLength="4"
           />

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="@string/required_fields"
           android:padding="@dimen/dp5"
           android:textSize="@dimen/sp14"
           android:layout_marginTop="@dimen/dp10"
           android:textColor="@color/black"/>

       <Button
           android:layout_width="@dimen/dp100"
           android:layout_height="@dimen/dp45"
           android:id="@+id/btn_submit"
           android:layout_gravity="center"
           android:layout_margin="@dimen/dp20"
           android:background="@drawable/sp_button"
           android:text="@string/submit"
           android:textColor="@color/white" />

   </LinearLayout>

</ScrollView>